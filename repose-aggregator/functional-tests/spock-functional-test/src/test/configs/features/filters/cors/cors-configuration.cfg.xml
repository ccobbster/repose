<?xml version="1.0" encoding="UTF-8"?>
<cross-origin-resource-sharing>
    <allowed-origins>
        <origin>http://localhost:${targetPort}</origin>
        <origin regex="true">http://.*.reposetest.site/.*</origin>
    </allowed-origins>
    <!--all endpoints support methods -->
    <allowed-methods>
        <method>GET</method>
        <method>POST</method>
        <method>PUT</method>
        <method>DELETE</method>
    </allowed-methods>
    <resources>
        <resource path="/testget/.*">
            <allowed-methods>
                <method>GET</method>
            </allowed-methods>
        </resource>
        <resource path="/testpost/.*">
            <allowed-methods>
                <method>POST</method>
            </allowed-methods>
        </resource>
    </resources>
</cross-origin-resource-sharing>